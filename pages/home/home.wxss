swiper {
    width: 750rpx;
    height: 375rpx;
}

swiper-item, 
swiper-item navigator,
swiper-item image {
    width: 100%;
    height: 100%;
}

.cates {
    display: flex;
    /* 主轴方向排列的方式 */
    /* justify-content: space-between;
    padding: 0 30rpx; */

    justify-content: space-around;
    align-items: center;
    margin: 30rpx 0;
}

.cates image {
    width: 128rpx;
    height: 140rpx;
}

.item {
    margin: 10rpx 0;
}

.item > image {
    width: 640rpx;
    height: 50rpx;
}

.box {
    overflow: hidden;
}

.box image {
    height: 190rpx;
    float: left;
    margin: 8rpx;
    margin-top: 0;
}

.box image:first-child {
    height: 390rpx;
}
