.wrap {
    padding: 0 25rpx;
}

.item {
    display: flex;
    align-items: center;
    margin: 10rpx 0;
    border-bottom: 1px solid #ececec;
    font-size: 24rpx;
    padding: 10rpx 0;
}

.item image {
    width: 160rpx;
    height: 160rpx;
    min-width: 160rpx;
    margin-right: 10rpx;
}

.item > view {
    flex: auto;
}

.name {
    font-weight: bold;
    display: block;
    margin-bottom: 10rpx;
}

.info {
    width: 100%;
    display: inline-flex;
    justify-content: space-between;
    align-items: center;
}

.info text:first-child {
    color: #f44;
    font-weight: bold;
}

.tips {
    text-align: center;
    position: relative;
    height: 80rpx;
    margin: 20rpx 0;
    font-size: 24rpx;
}

.tips::before,
.tips::after {
    position: absolute;
    content: '---------';
}

.tips::before {
    left: 80rpx;
}

.tips::after {
    right: 80rpx;
}