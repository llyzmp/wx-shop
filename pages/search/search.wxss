.search-wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 25rpx;
    font-size: 26rpx;
}

.search {
    flex: auto;
    display: inline-flex;
    align-items: center;
    background: #f2f3f5;
    border-radius: 3rpx;
    padding: 10rpx 0;
}

.search input {
    flex: auto;
}

.search image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
    margin-left: 10rpx;
}

.cancel {
    width: 80rpx;
    text-align: center;
}

.sug-list {
    padding: 0 25rpx;
}

.sug-list view {
    margin: 10rpx 0;
    border-bottom: 1rpx solid #f2f3f5;
    padding: 10rpx 0;
    min-height: 80rpx;
    line-height: 1.5;
    display: flex;
    align-items: center;
    font-size: 26rpx;
}

.his-title {
    display: flex;
    justify-content: space-between;
    padding: 0 25rpx;
    font-size: 26rpx;
    font-weight: bold;
    margin-top: 20rpx;
}

.his-title image {
    width: 32rpx;
    height: 32rpx;
}

.his-list {
    padding: 0 25rpx;
    margin-top: 10rpx;
}

.his-list text {
    padding: 2rpx 10rpx;
    font-size: 24rpx;
    background: #ccc;
    border-radius: 5rpx;
    margin-right: 10rpx;
    display: inline-flex;
    justify-content: center;
    align-items: center;
}